---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Champions League";
localStorage.CountVisit;
---
<script src="../scripts/mycountdown.js"></script>
<script src="../scripts/simplyCountdown.min.js"></script>
<style>
	.portada {
	width: 100%;
	background: #9e6f6f;
	/* min-height: 100vh; */
	position: fixed;
	top: 0;
	left: 0;
	right: 0;

	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	text-align: center;
	transition: .5s ease-out all;
	margin-bottom: 100px;
}
.portada.oculta {
	transform: translateY(100%);
}

#cuenta {
	display: flex;
	justify-content: center;
	margin-bottom: 100px;
}

.simply-section {
	background-color: aqua;
	width: 180px;
	height: 180px;
	margin: 0 20px;
	border-radius: 5px;
	display: flex;
	align-items: center;
	justify-content: center;
}

.simply-amount{
	display: block;
	font-size: 50px;
	font-size: 700;
}

.simply-word {
	font-weight: 300;
	font-size: 30px;

}
</style>

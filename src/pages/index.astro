---
import '../styles/global.css';
import Navigation from '../componentes/Navigation.astro';
import Footer from '../componentes/Footer.astro';

const pageTitle = "Home Page";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<style>
			h1 {
			color: purple;
			font-size: 4rem;
		}
		</style>
	</head>
	<body>
		<Navigation />
		<h1>{pageTitle}</h1>
		<button><img src='https://cdn.icon-icons.com/icons2/1637/PNG/256/laliga_109475.png' /></button>
		<Footer />
	</body>
</html>
